{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.extensions.autoUpdate": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "go"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "diagnostic-languageserver.filetypes": {
    "php": ["phpcs", "phpstan"],
    "python": ["flake8"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black", "isort"]
  },
  "diagnostic-languageserver.linters": {
    "phpcs": {
      "args": [
        "--standard=./phpcs.xml",
        "--exclude=PSR1.Methods.CamelCapsMethodName.NotCamelCaps",
        "--report=emacs",
        "-s",
        "-"
      ],
      "command": "./vendor/bin/phpcs",
      "formatPattern": [
        "^.*:(\\d+):(\\d+):\\s+(.*)\\s+-\\s+(.*)(\\r|\\n)*$",
        {
          "column": 2,
          "line": 1,
          "message": 4,
          "security": 3
        }
      ],
      "offsetColumnEnd": 1,
      "rootPatterns": ["composer.json", "composer.lock", "vendor", ".git"],
      "securities": {
        "error": "error",
        "warning": "warning"
      },
      "sourceName": "phpcs"
    },
    "flake8": {
      "command": "flake8",
      "args": [
        "--max-line-length=119",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "debounce": 100,
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "flake8",
      "formatLines": 1,
      "formatPattern": [
        "^(\\d+),(\\d+),([A-Z]),(\\w+ \\d+) (.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "code": 4,
          "message": 5
        }
      ],
      "securities": {
        "E": "error",
        "W": "warning",
        "F": "info",
        "I": "hint",
        "C": "hint"
      }
    },
    "phpstan": {
      "command": "./vendor/bin/phpstan",
      "args": [
        "analyze",
        "--configuration=./phpstan.neon",
        "--error-format=raw",
        "--no-progress",
        "-"
      ]
    }
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["--line-length", "119", "-q", "-"],
      "rootPatterns": ["pyproject.toml", "setup.cfg", "tox.ini", ".git"],
      "formatStdin": true
    },
    "isort": {
      "command": "isort",
      "args": ["-q", "-"]
    }
  },
  "jedi.enable": true,
  "jedi.startupMessage": false,
  "jedi.executable.command": "jedi-language-server",
  "languageserver": {
    "jedi": {
      "command": "docker",
      "args": ["exec", "-i", "コンテナ名", "jedi-language-server"],
      "filetypes": ["python"]
    }
  },
  "intelephense.environment.phpVersion": "8.2",
  "intelephense.environment.composerJsonPath": "./composer.json",
  "eslint.filetypes": ["javascript", "typescript"],
  "snippets.ultisnips.pythonPrompt": false,
  "Lua.diagnostics.globals": [
    "vim",
    "use",
    "packer_plugins",
    "packer_compiled",
    "vim.fn",
    "vim.cmd",
    "vim.lsp",
    "vim.api"
  ]
}
